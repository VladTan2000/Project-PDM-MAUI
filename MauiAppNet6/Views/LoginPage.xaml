<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppNet6.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Label 
            Text="Login Data"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Username"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>
        <Entry x:Name="utilizator" 
               Text="{Binding Username}"/> 
        
        <Entry x:Name="parola" 
               Text="{Binding Parola}"
               IsPassword="true"/>
            <Button Text="Verificare date"
                Clicked="verificareParola">
        </Button>
        <Button Text="Registrare Utilizator"
                Clicked="RegistrareUtilizator">
        </Button>

    </VerticalStackLayout>
</ContentPage>